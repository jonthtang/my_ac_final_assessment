<div class="container">
  <div class="row">
    <div class="col-4 offset-4 panel login">
      <h2 class = "login">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs login">
        <%= f.input :email, required: false, autofocus: true %></br>
        <%= f.input :password, required: false %></br>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></br>
      </div>

      <div class="form-actions login">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
